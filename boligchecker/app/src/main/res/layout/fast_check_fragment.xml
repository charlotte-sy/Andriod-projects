<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fast_check_button_text"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Boligejer.dk offer you information "/>

    <Button
        android:id="@+id/fast_check_webpage_button"
        android:layout_below="@+id/fast_check_button_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#009284"
        android:textColor="@color/white"
        android:text="Go to Boligejer.dk"/>

    <WebView
        android:id="@+id/fast_check_webview"
        android:layout_below="@+id/fast_check_webpage_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>

    <ImageView
        android:id="@+id/ejer_first"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fast_check_webview"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/ejer3"/>

    <TextView
        android:layout_alignLeft="@+id/ejer_first"
        android:layout_alignTop="@+id/ejer_first"
        android:layout_marginTop="84dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Type the address here"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_alignRight="@+id/ejer_first"
        android:layout_alignTop="@+id/ejer_first"
        android:layout_marginTop="84dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="2.Click"/>

    <ImageView
        android:id="@+id/ejer_second"
        android:layout_below="@+id/ejer_first"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@drawable/ejer4"/>

    <TextView
        android:layout_alignLeft="@id/ejer_second"
        android:layout_alignTop="@+id/ejer_second"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="140dp"
        android:layout_below="@+id/ejer_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="3. Check name of the landlord"/>

</RelativeLayout>
</ScrollView>