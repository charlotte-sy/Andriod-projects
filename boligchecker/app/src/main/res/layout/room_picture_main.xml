<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    >
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/room_manage_button"
            android:layout_width="220dp"
            android:layout_height="140dp"
            android:drawableLeft= "@drawable/interior_design"
            android:text="@string/room_manage"
            />

    <Button
        android:id="@+id/check_list_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginTop="30dp"
        android:drawableLeft= "@drawable/list"
        android:text="@string/check_list" />

</LinearLayout>


</RelativeLayout>