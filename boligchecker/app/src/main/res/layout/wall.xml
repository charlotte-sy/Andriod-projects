<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/room_layout_text"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Layout"
        android:textSize="20sp"/>


    <LinearLayout
        android:id="@+id/room_layout_buttons"
        android:layout_marginTop="70dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ToggleButton
            android:id="@+id/room_button1"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/toggle_button"
            android:textOff="1"
            android:textOn="1"
            android:textSize="20sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/room_button4"
                android:layout_width="30dp"
                android:layout_height="85dp"
                android:background="@drawable/toggle_button"
                android:textOff="4"
                android:textOn="4"
                android:textSize="20sp"
                />

            <ToggleButton
                android:id="@+id/room_button2"
                android:layout_width="30dp"
                android:layout_height="85dp"
                android:layout_marginLeft="80dp"
                android:background="@drawable/toggle_button"
                android:textOff="2"
                android:textOn="2"
                android:textSize="20sp"
                />
        </LinearLayout>

        <ToggleButton
            android:id="@+id/room_button3"
            android:layout_gravity="center_horizontal"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:background="@drawable/toggle_button"
            android:textOff="3"
            android:textOn="3"
             />



    </LinearLayout>


    <TextView
        android:id="@+id/over_view_Text"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/overview"
        android:textSize="20sp"/>



    <ImageView
        android:layout_below="@+id/over_view_Text"
        android:layout_toRightOf="@id/room_layout_buttons"
        android:id="@+id/take_a_photo_button"
        android:layout_marginTop="10dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/empty_room"/>

    <TextView
        android:layout_below="@+id/take_a_photo_button"
        android:id="@+id/detail_view_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/detail_view"
        android:textSize="20sp"
        />


    <LinearLayout
        android:layout_below="@+id/detail_view_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_image"
        android:layout_width="300dp"
        android:layout_height="200dp"
        />

        <Button
            android:id="@+id/btn_album_button"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:text="+"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>

